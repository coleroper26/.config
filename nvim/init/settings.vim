" General Settings
syntax on
filetype on
set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nu
set nowrap
set smartcase
set noswapfile
set nobackup
set number relativenumber
set nu rnu
set undodir=~/.vim/undodir
set undofile
set incsearch
set encoding=utf-8
set clipboard=unnamedplus
set background=dark

" Vim-template Settings
let g:templates_directory           = '$HOME/.config/nvim/templates'
let g:templates_global_name_prefix  = 'skeleton:'

